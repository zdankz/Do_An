<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".V.detail_vande">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/text12"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="40dp"
            android:paddingTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            android:id="@+id/back_loaddetail"
            android:src="@drawable/ic_sharp_arrow_back_24"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="match_parent"

            android:paddingHorizontal="10dp"
            android:layout_height="wrap_content"

            android:text="Chọn dịch vụ bạn muốn..."
            android:paddingVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:id="@+id/igm_load"
            android:layout_height="120dp"/>
        <TextView
            android:paddingVertical="20dp"
            android:gravity="center"
            android:textColor="#FF3700B3"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:text="Ten"
            android:id="@+id/gettenvande"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="260dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="...................
            ...............................................
            ...............................................
            ..................................................
            ............................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................................"
            android:id="@+id/getmota"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="-1dp"
            android:paddingHorizontal="20dp"
            android:id="@+id/book"
            android:text="Booking"
            android:textStyle="bold"
            android:layout_height="50dp"
            android:background="#270C0C"/>

    </LinearLayout>


</LinearLayout>