<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.VanDe.Show_Van_de">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:id="@+id/chosse_nhom"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioGroup
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/input_vande_vande"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thẩm Mỹ"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/thammy_vande"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/benhly_vande"
                android:layout_height="wrap_content"
                android:text="Bệnh Lý"/>

        </RadioGroup>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/rvAmUser_VanDe"/>

</RelativeLayout>