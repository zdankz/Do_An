<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#B4F3E6E6"
    android:layout_height="match_parent"
    tools:context=".View.Link.Reply">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFA000"
        android:id="@+id/bn"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:id="@+id/Back_reply"
            android:background="@drawable/ic_back"
            android:layout_height="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:gravity="center"
            android:paddingRight="50dp"
            android:text="Câu hỏi khác"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/bn"
        android:layout_marginVertical="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cauhoi"
            android:textStyle="bold"

            android:text="ĐAY LA CÂU HỎI"
            android:gravity="center"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lacau tra loi"/>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>